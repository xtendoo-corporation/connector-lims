<odoo>


    <record id="analysis_components_form" model="ir.ui.view">
        <field name="name">analysis.components.form</field>
        <field name="model">analysis.component.lims</field>
        <field name="arch" type="xml">
            <form>
                <label for="parameter" />
                <field name="parameter" />
                <br />
                <label for="comparator" />
                <field name="comparator" />
                <br />
                <label for="min_value" />
                <field name="min_value" />
                <br />
                <label for="max_value" />
                <field name="max_value" />
            </form>
        </field>
    </record>

    <record id="analysis_components_tree" model="ir.ui.view">
        <field name="name">analysis.components.tree</field>
        <field name="model">analysis.component.lims</field>
        <field name="type">tree</field>
        <field name="arch" type="xml">
                 <tree editable="bottom">
                    <field name="parameter" />
                    <field name="comparator" widget="selection" />
                    <field name="min_value" />
                    <field name="max_value" />
                </tree>
        </field>
    </record>
     <record id="action_lims_component" model="ir.actions.act_window">
        <field name="name">Component Lims</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">analysis.component.lims</field>
        <field name="view_mode">tree,form</field>
        <field name="target">current</field>
        <field name="context">{'module' : 'lims'}</field>
    </record>

    <menuitem
        id="menu_lims_component"
        name="Componenet Lims"
        parent="lims.cat_menu_lims_config"
        sequence="0"
        action="action_lims_component"
        groups="base.group_system"
    />
</odoo>
