<odoo>

    <record id="analysis_numerical_resutl_form" model="ir.ui.view">
        <field name="name">analysis.numerical.result.form</field>
        <field name="model">lims.analysis.numerical.result</field>
        <field name="arch" type="xml">
            <form>
                <label for="parameter_ids" />
                <field name="parameter_ids" />
                <br />
            </form>
        </field>
    </record>

    <record id="analysis_numerical_result_tree" model="ir.ui.view">
        <field name="name">analysis.numerical.result.result.tree</field>
        <field name="model">lims.analysis.numerical.result</field>
        <field name="type">tree</field>
        <field name="arch" type="xml">
            <tree editable="bottom">
                <field name="analysis_ids" readonly="1" invisible="1" />
                <field
                    name="parameter_ids"
                    readonly="1"
                    optional="show"
                    string="Parámetro"
                />
                <field name="value" optional="show" string="valor" />
                <field name="parameter_uom" optional="show" string="UdM" />
                <field name="limit_value_char" optional="show" string="Valor Límite" />
                <field
                    name="between_limit_value"
                    optional="show"
                    string="valor entre"
                />
                <field name="is_null" optional="show" string="Es nulo" />
                <field name="corrected_value" optional="show" string="Valor Correcto" />
                <field name="loq" optional="show" />
                <field name="corrected_loq" optional="show" string="LOQ Correcto" />
                <field name="dil_fact" optional="show" />
                <field
                    name="result"
                    decoration-success="result == 'pass'"
                    decoration-warning="result == 'warning'"
                    decoration-danger="result == 'fail'"
                    decoration-info="result == 'none'"
                    widget="badge"
                    optional="show"
                    string="Resultado"
                />
                <field name="reason" optional="show" string="Razón" />
                <field name="comment" optional="show" string="Comentario" />

            </tree>
        </field>
    </record>

</odoo>
