<odoo>
    <record id="re_partner_form_view" model="ir.ui.view">
        <field name="name">re.partner.form.view</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form" />
        <field name="arch" type="xml">
            <field name="name" position="after">
                <div
                    class="o_row"
                    attrs="{'invisible': ['|',('is_company','=',False),('parent_id','!=',False)]}"
                >
                    <group name="is_lab">
                        <label for="is_lab" />
                        <div class="o_row">
                            <field name="is_lab" />
                        </div>
                    </group>
                </div>
            </field>
        </field>
    </record>
</odoo>
