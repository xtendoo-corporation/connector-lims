<odoo>

    <record id="analysis_components_form" model="ir.ui.view">
        <field name="name">analysis.components.form</field>
        <field name="model">lims.analysis.component</field>
        <field name="arch" type="xml">
            <form>
                <label for="analysis_ids" />
                <field name="analysis_ids" />
                <br />
                <label for="name" />
                <field name="name" />
                 <br />
                 <label for="component_uom" />
                <field name="component_uom" />
                <br />
                 <notebook>
                    <page string="Limit Results" name="limit_results">
                        <field
                            name="component_limit_result_ids"
                            widget="one2many_list"
                        />
                    </page>
                </notebook>
            </form>
        </field>
    </record>

    <record id="analysis_components_tree" model="ir.ui.view">
        <field name="name">analysis.component.tree</field>
        <field name="model">lims.analysis.component</field>
        <field name="type">tree</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name" />
            </tree>
        </field>
    </record>

    <record id="action_lims_component" model="ir.actions.act_window">
        <field name="name">Component Lims</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">lims.analysis.component</field>
        <field name="view_mode">tree,form</field>
        <field name="target">current</field>
        <field name="context">{'module' : 'lims'}</field>
    </record>

    <menuitem
        id="menu_lims_component"
        name="Componenet Lims"
        parent="lims.cat_menu_lims_config"
        sequence="0"
        action="action_lims_component"
        groups="base.group_system"
    />
</odoo>
