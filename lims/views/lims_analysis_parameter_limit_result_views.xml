<odoo>

    <record id="analysis_parameter_form" model="ir.ui.view">
        <field name="name">analysis.parameter.limit.result.form</field>
        <field name="model">lims.analysis.parameter.limit.result</field>
        <field name="arch" type="xml">
            <form>
                <label for="parameter_ids" />
                <field name="parameter_ids" />
                <br />
            </form>
        </field>
    </record>

    <record id="analysis_parameters_tree" model="ir.ui.view">
        <field name="name">analysis.parameters.limit.result.tree</field>
        <field name="model">lims.analysis.parameter.limit.result</field>
        <field name="type">tree</field>
        <field name="arch" type="xml">
            <tree editable="bottom">
                <field name="operator_from" string="Operador desde" />
                <field name="limit_value_from" string="Valor desde" />
                <field name="operator_to" string="Operador hasta" />
                <field name="limit_value_to" string="Valor hasta" />
                <field name="type" />
                <field
                    name="state"
                    widget="selection"
                    decoration-success="state == 'conform'"
                    decoration-warning="state == 'warning'"
                    decoration-danger="state == 'not_conform'"
                    string="Estado"
                />
                <field name="message" string="Comentario" />
            </tree>
        </field>
    </record>

</odoo>
